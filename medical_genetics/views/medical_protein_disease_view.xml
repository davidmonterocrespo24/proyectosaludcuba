<odoo>
    <data>
        <record id="medical_protein_disease_form_view" model="ir.ui.view">
            <field name="name">medical.protein.disease.form.view</field>
            <field name="model">medical.protein.disease</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Disease" id="disease_header" colspan="4" col="6">
                            <field name="name"/>
                            <field name="disease_name"/>
                            <field name="acronym"/>
                        </group>
                        <newline/>
                        <group string="Protein and Gene" id="misc_info" colspan="4" col="6">
                            <field name="disease_uri" widget="url"/>
                            <field name="dominance"/>
                            <field name="mim_reference"/>
                        </group>
                        <newline/>
                        <field colspan="4" name="description"/>
                        <newline/>
                        <field colspan="4" name="gene_variant"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medical_protein_disease_tree_view" model="ir.ui.view">
            <field name="name">medical.protein.disease.tree.view</field>
            <field name="model">medical.protein.disease</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="disease_name"/>
                    <field name="acronym"/>
                    <field name="dominance"/>
                </tree>

            </field>
        </record>

        <record model="ir.actions.act_window" id="medical_protein_disease_action">
            <field name="name">Protein related disorders</field>
            <field name="res_model">medical.protein.disease</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="medical_protein_disease_menu"
                name="Protein related disorders"
                parent="medical_genetics_menu"
                action="medical_protein_disease_action"
        />
    </data>
</odoo>
