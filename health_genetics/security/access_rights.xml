<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- BEGIN GENETICS ADMINISTRATION GROUP ACCESS RIGHTS -->

        <!-- Create the Health Administration group -->
        <record model="res.group" id="group_health_genetics_admin">
            <field name="name">Health Genetics Administration</field>
        </record>

        <!-- Assign the Group to the "admin" user -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <!-- Access to Menus -->
        <record model="ir.ui.menu-res.group" id="menu_health_group_health_genetics_admin">
            <field name="menu" ref="gnuhealth_conf_genetics"/>
            <field name="group" ref="group_health_genetics_admin"/>
        </record>


        <!-- END OF GENETICS ADMINISTRATION GROUP ACCESS RIGHTS -->

        <!-- Access to Menus -->
        <record model="ir.ui.menu"
                id="health_genetics.health_genetics_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_disease_gene_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_gene_variant_phenotype_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>


        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_gene_variant_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_patient_family_diseases_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_patient_genetic_risk_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

        <record model="ir.ui.menu"
                id="health_genetics.gnuhealth_protein_disease_menu">
            <field name="groups_id"
                   eval="[(4, ref('health_genetics.group_health_genetics_admin'))]"/>
        </record>

    </data>
</odoo>


