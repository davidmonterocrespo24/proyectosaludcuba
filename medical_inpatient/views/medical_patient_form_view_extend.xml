<odoo>
    <data>
        <record model="ir.ui.view" id="medical_patient_view_form_extend">
            <field name="name">medical.patient.view.form.extend</field>
            <field name="model">medical.patient</field>
            <field name="inherit_id" ref="medical.medical_patient_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_medical_general']" position="after" >
                   <group string="Hospitalization Status">
                       <field name="patient_status"/>
                   </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


