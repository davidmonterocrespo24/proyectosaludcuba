<odoo>
    <data>
        <record id="medical_gene_variant_phenotype_form_view" model="ir.ui.view">
            <field name="name">medical.gene.variant.phenotype.form.view</field>
            <field name="model">medical.gene.variant.phenotype</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name"/>
                        <field name="name"/>
                        <newline/>
                        <label for="gene"/>
                        <field name="gene"/>
                        <label for="variant"/>
                        <field name="variant"/>
                        <newline/>
                        <label for="phenotype"/>
                        <field colspan="3" name="phenotype"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medical_gene_variant_phenotype_tree_view" model="ir.ui.view">
            <field name="name">medical.gene.variant.phenotype.tree.view</field>
            <field name="model">medical.gene.variant.phenotype</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gene"/>
                    <field name="variant"/>
                    <field name="phenotype"/>
                </tree>

            </field>
        </record>

        <record model="ir.actions.act_window" id="medical_gene_variant_phenotype_action">
            <field name="name">Variant Phenotypes</field>
            <field name="res_model">medical.gene.variant.phenotype</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="medical_gene_variant_phenotype_menu"
                name="Variant Phenotypes"
                parent="medical_genetics_menu"
                action="medical_gene_variant_phenotype_action"
        />
    </data>
</odoo>
