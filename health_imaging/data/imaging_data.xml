            <field name="type">service</field>
            <field name="cat_id" ref="product_category_imaging_services"/>
        </record>

        <record id="product_product_ultrasoundcharges" model="product.product_product">
            <field name="template" model="product.product_template" ref="product_template_ultrasoundcharges"/>
