<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Request - Test -->
        <record id="gnuhealth_request_imaging_test_form_view" model="ir.ui.view">
            <field name="name">gnuhealth.request.imaging.test.form</field>
            <field name="model">gnuhealth.request.imaging.test</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Wizard Request - Test">
                        <field name="request" />
                        <field name="test" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Request Patient Imaging Test Start -->
        <record id="gnuhealth_patient_imaging_test_request_start_form_view" model="ir.ui.view">
            <field name="name">gnuhealth.patient.imaging.test.request.start.form</field>
            <field name="model">gnuhealth.patient.imaging.test.request.start</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Wizard Request Patient Imaging Test Start">
                            <field name="date" />
                            <field name="patient" />
                            <field name="doctor" />
                            <field name="tests" />
                            <field name="urgent" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- gnuhealth.patient.imaging.test.request -->
        <record id="gnuhealth_request_imaging.test_form_view" model="ir.ui.view">
            <field name="name">gnuhealth.patient.imaging.test.request.form</field>
            <field name="model">gnuhealth.patient.imaging.test.request</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Request Patient Imaging Test'">
                        <field name="account_type" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>
        <!--record id="account_accrual_accounting_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Accrual Entry for the expense/revenue recognition</field>
            <field name="res_model">account.accrual.accounting.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record-->
    </data>
</odoo>
