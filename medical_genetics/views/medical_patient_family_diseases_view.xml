<odoo>
    <data>
        <record id="medical_patient_family_diseases_form_view" model="ir.ui.view">
            <field name="name">medical.patient.family.diseases.form.view</field>
            <field name="model">medical.patient.family.diseases</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name"/>
                        <field colspan="3" name="name"/>
                        <newline/>
                        <label for="xory"/>
                        <field name="xory"/>
                        <label for="relative"/>
                        <field name="relative"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medical_patient_family_diseases_tree_view" model="ir.ui.view">
            <field name="name">medical.patient.family.diseases.tree.view</field>
            <field name="model">medical.patient.family.diseases</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="xory"/>
                    <field name="relative"/>
                </tree>

            </field>
        </record>

        <record model="ir.actions.act_window" id="medical_patient_family_diseases_action">
            <field name="name">Family History</field>
            <field name="res_model">medical.patient.family.diseases</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="medical_patient_family_diseases_menu"
                name="Family History"
                parent="medical_genetics_menu"
                action="medical_patient_family_diseases_action"
        />
    </data>
</odoo>
